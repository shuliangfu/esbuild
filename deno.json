{
  "name": "@dreamer/esbuild",
  "version": "1.0.0-beta.42",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./src/cli.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE.md",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@dreamer/console": "jsr:@dreamer/console@1.0.3-beta.6",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0-beta.7",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.0-beta.22",
    "@dreamer/image": "jsr:@dreamer/image@^1.0.0-beta.2",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0-beta.40",
    "esbuild": "npm:esbuild@^0.27.2",
    "postcss": "npm:postcss@8.4.39",
    "autoprefixer": "npm:autoprefixer@10.4.19",
    "cssnano": "npm:cssnano@7.0.3"
  },
  "nodeModulesDir": "auto",
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".deno",
    "tests/data"
  ],
  "allowScripts": {
    "allow": [],
    "deny": [
      "npm:esbuild@0.27.2",
      "npm:esbuild@0.27.2",
      "npm:puppeteer@24.36.0"
    ]
  }
}
