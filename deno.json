{
  "name": "@dreamer/esbuild",
  "version": "1.0.31",
  "license": "Apache-2.0",
  "exports": {
    ".": "./src/mod.ts",
    "./css-injector": "./src/utils/css-injector.ts",
    "./client": "./src/entry-client.ts",
    "./server": "./src/entry-server.ts",
    "./bundle": "./src/entry-bundle.ts",
    "./builder": "./src/entry-builder.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "LICENSE",
      "NOTICE",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@dreamer/i18n": "jsr:@dreamer/i18n@^1.0.1",
    "@dreamer/console": "jsr:@dreamer/console@^1.0.12",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.2",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.15",
    "@dreamer/image": "jsr:@dreamer/image@^1.0.2",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.12",

    "esbuild": "npm:esbuild@0.27.2",
    "esbuild-plugin-solid": "npm:esbuild-plugin-solid@0.6.0",
    "postcss": "npm:postcss@8.4.39",
    "autoprefixer": "npm:autoprefixer@10.4.19",
    "cssnano": "npm:cssnano@7.0.3"
  },
  "nodeModulesDir": "auto",
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".deno",
    "tests/data"
  ]
}
